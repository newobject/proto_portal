<%= form_for([:admin, @role], html: { class: 'form-horizontal' }) do |f| %>
	<fieldset>
		<legend>
			<%= @role.new_record?? 'New' : 'Editing' %> admin_role
		</legend>
		<div class="control-group">
			<%= f.label :name, class: 'control-label' %>
			<div class="controls">
				<%= f.text_field :name %>
			</div>
		</div>
		<div class="form-actions">
			<%= f.submit class: 'btn btn-primary' %>
		</div>
	</fieldset>
<% end %>
