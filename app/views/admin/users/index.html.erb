<h2>Listing admin_users</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Id</th>
	    <th>Email</th>
			<th>Action</th>
	  </tr>
	</thead>
  <tbody>
		<% @users.each do |user| %>
		  <tr>
		    <td><%= link_to user.id, admin_user_path(user) %></td>
		    <td><%= user.email %></td>
		    <td>
					<%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-info' %>
					<%= link_to 'Destroy', admin_user_path(user), confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger' %>
				</td>
		  </tr>
		<% end %>
	</tbody>

</table>