<!DOCTYPE html>
<html>
<head>
  <title>ProtoPortal</title>
  <%= stylesheet_link_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to 'Protal', root_path, :class => 'brand' %>
        <div class="nav-collapse">
          <ul class="nav pull-right">
            <% if user_signed_in? %>
              <li id="user_dropdown" class="dropdown">
                <a href="#user_dropdown" class="dropdown-toggle", data-toggle="dropdown">
                  <%= current_user.email %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Setting', '/users/edit' %></li>
                  <li><%= link_to 'Sign out', '/users/sign_out', :method => 'delete' %></li>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <%= yield %>
  </div>

  <%= javascript_include_tag "application" %>
</body>
</html>
