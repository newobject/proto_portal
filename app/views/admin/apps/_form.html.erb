<%= form_for([:admin, @app], html: { class: 'form-horizontal' }) do |f| %>
	<fieldset>
		<legend>
			<%= @app.new_record?? 'New' : 'Editing' %> admin_app
		</legend>
		<div class="control-group">
			<%= f.label :name, class: 'control-label' %>
			<div class="controls">
				<%= f.text_field :name %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :code, class: 'control-label' %>
			<div class="controls">
				<%= f.text_field :code %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :secret, class: 'control-label' %>
			<div class="controls">
				<%= f.text_field :secret %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :domain, class: 'control-label' %>
			<div class="controls">
				<%= f.text_field :domain %>
			</div>
		</div>
		<div class="form-actions">
			<%= f.submit class: 'btn btn-primary' %>
		</div>
	</fieldset>
<% end %>
