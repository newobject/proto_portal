<h2>Listing admin_roles</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Id</th>
	    <th>Role Name</th>
			<th>Action</th>
	  </tr>
	</thead>
  <tbody>
		<% @roles.each do |role| %>
		  <tr>
		    <td><%= link_to role.id, admin_role_path(role) %></td>
		    <td><%= role.name %></td>
		    <td>
					<%= link_to 'Edit', edit_admin_role_path(role), class: 'btn btn-info' %>
					<%= link_to 'Destroy', admin_role_path(role), confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger' %>
				</td>
		  </tr>
		<% end %>
	</tbody>

</table>

<%= link_to 'New Role', new_admin_role_path %>
