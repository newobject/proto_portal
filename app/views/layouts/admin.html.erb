<!DOCTYPE html>
<html>
<head>
  <title>Proto Portal Admin</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to 'Protal Admin', admin_root_path, :class => 'brand' %>
        <div class="nav-collapse">
					<ul class="nav">
						<li class="<%= controller_name == 'apps' ? 'active' : '' %>" >
							<%= link_to 'Apps', admin_apps_path %>
						</li>
						<li class="<%= controller_name == 'roles' ? 'active' : '' %>" >
							<%= link_to 'Roles', admin_roles_path %>
						</li>
						<li class="<%= controller_name == 'users' ? 'active' : '' %>" >
							<%= link_to 'Users', admin_users_path %>
						</li>
					</ul>
          <ul class="nav pull-right">
            <li id="user_dropdown" class="dropdown">
              <a href="#user_dropdown" class="dropdown-toggle", data-toggle="dropdown">
                <%= current_user.email %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Setting', '/users/edit' %></li>
                <li><%= link_to 'Sign out', '/users/sign_out', :method => 'delete' %></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
		<% if notice %>
			<div class="alert alert-success">
				<a class="close" data-dismiss="alert">x</a>
				<p><%= notice %></p>
			</div>
		<% end %>
		
    <%= yield %>
  </div>

</body>
</html>
